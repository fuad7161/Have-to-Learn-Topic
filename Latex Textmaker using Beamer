   \begin{frame}{Counting}
       \paragraph{Counting mainly encompasses fundamental counting rule, the permutation rule, and the combination rule.\\}
       \paragraph{The Rule of Sum:}
       \begin{center}
          $$|A∪B|=|A|+|B|$$ 
       \end{center}
       
       \paragraph{The Rule of Product:}
       \begin{center}
          $$|A×B|=|A|x|B|$$ 
       \end{center}
   \end{frame}

